<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF8C00"/> <!-- Darker shade for pressed state -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent center -->
            <stroke android:width="2dp" android:color="@color/oren"/> <!-- Border color and width -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
